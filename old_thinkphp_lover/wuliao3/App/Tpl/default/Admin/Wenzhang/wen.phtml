<link type="text/css" rel="stylesheet" href="__PUBLIC__/admin/css/wen.css" />
<script type="text/javascript">
$(function (){
	$("#bq").manhuaHtmlArea({
		Event : "click",
		Left : -22,
		Top : 23,			
		id : "content"
	});
	$("#bq1").manhuaHtmlArea({
		Event : "click",
		Left : -22,
		Top : 23,			
		id : "content1"
	});
	$("#btnTJ1").click(function(){
		var str = $('form').serialize();
		$.get(
			'__URL__/tianjia',
			str,
			function(cc){
				if(cc.status == 1){
					alert("发表成功");
				}else{
					alert("您的填写有误，文章之间不要加空格");
				}
			},
			'json'
		);
	});
	
});
</script>
<style type="text/css">
div,div,input,select,fieldset,textarea{background-color:#FFFFFF;}
input{border:1px solid #ccc;height:28px;width:190px;}
