                        <textarea id="content1" class="content neirong" name="nei" style="height:300px;width:900px;margin-left:25px;font-size:16px;overflow:auto;clear:both;">
                        
                        </textarea><br />
                        <div style="margin-left:30px; height:50px;font-size:16px;">
                        	<span style="color:blue;">表情</span>
	                        <img  src="__PUBLIC__/biaoqing/images/smail.png" id="bq1" alt="选择表情" class="bq">
	                        <input style="width:90px;cursor:hand" type="button" value="提交" id="btnTJ1" />
                        </div>
